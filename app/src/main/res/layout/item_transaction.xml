<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivTransactionImage"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_launcher_foreground"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivTransactionImage"
        app:srcCompat="@drawable/opaquegradient" />

    <TextView
        android:id="@+id/tvDateStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageView4"
        android:text="5/7/2018"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvBlurb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvDateStart"
        android:layout_below="@id/tvDateStart"
        android:layout_marginTop="3dp"
        android:textColor="@color/black"
        android:text="Borrowed x from y"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvCost"
        android:layout_alignTop="@+id/tvDateStart"
        android:layout_marginRight="14dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ivTransactionImage"
        android:text="$15.67" />

    <TextView
        android:id="@+id/textView8"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvDateStart"
        android:layout_toEndOf="@+id/tvDateStart"
        android:text="  to  " />

    <TextView
        android:id="@+id/tvDateEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvDateStart"
        android:layout_toEndOf="@+id/textView8"
        android:text="5/9/2018"
        android:textColor="@color/black"
        android:textSize="18sp" />





</RelativeLayout>